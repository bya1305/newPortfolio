<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_path %>

<% @portfolio_items.each do |item| %>
  <p><%= link_to item.title, portfolio_path(item) %></p>
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <%= image_tag item.thumbnail if !item.thumbnail.nil? %>
  <%= link_to "Edit", edit_portfolio_path(item) %>
  <%= link_to "Delete Portfolio Item", portfolio_path(item), method: :delete, data: { confirm: 'Are you sure you want to delete this item?' }%>
<% end %>
